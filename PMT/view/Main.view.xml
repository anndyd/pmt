<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="sap.it.pmt.ui.view.Main" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
		title="Password management"
		id="mainPage">
		<VBox>
			<f:SimpleForm id="userForm1"
                    editable="true"
			              layout="ResponsiveGridLayout"
                    title="Reset/Lock/Unlock Password"
			              labelSpanXL="4"
			              labelSpanL="4"
			              labelSpanM="12"
			              labelSpanS="12"
			              adjustLabelSpan="false"
			              emptySpanXL="0"
			              emptySpanL="0"
			              emptySpanM="0"
			              emptySpanS="0"
			              columnsXL="2"
			              columnsL="2"
			              columnsM="1"
			              singleContainerFullSize="false">
				<f:content>
              <Label text="Reset" />
              <Button text="Reset"
                      press="onReset"
                      ariaDescribedBy="defaultButtonDescription genericButtonDescription">
                <layoutData>
                  <l:GridData span="XL2 L3 M3 S4" />
                </layoutData>
              </Button>
              <Label text="Lock" />
              <Button text="Lock"
                      press="onLock"
                      ariaDescribedBy="defaultButtonDescription genericButtonDescription">
                <layoutData>
                  <l:GridData span="XL2 L3 M3 S4" />
                </layoutData>
              </Button>
              <Button text="Unlock"
                      press="onUnlock"
                      ariaDescribedBy="defaultButtonDescription genericButtonDescription">
                <layoutData>
                  <l:GridData span="XL2 L3 M3 S4" />
                </layoutData>
              </Button>
				</f:content>
			</f:SimpleForm>
			<f:SimpleForm id="userForm2"
                    editable="true"
			              layout="ResponsiveGridLayout"
			              title="Change Password"
			              labelSpanXL="4"
			              labelSpanL="4"
			              labelSpanM="12"
			              labelSpanS="12"
			              adjustLabelSpan="false"
			              emptySpanXL="0"
			              emptySpanL="0"
			              emptySpanM="0"
			              emptySpanS="0"
			              columnsXL="2"
			              columnsL="2"
			              columnsM="1"
			              singleContainerFullSize="false">
				<f:content>
              <Label text="Old password" />
              <Input value="" type="Text" submit=""
                editable="true" maxLength="8">
              </Input>
              <Label text="New password" />
              <Input value="" type="Text" submit=""
                editable="true" maxLength="8">
              </Input>
              <Label text="Confirm password" />
              <Input value="" type="Text" submit=""
                editable="true" maxLength="8">
              </Input>
              <Label text="" />
              <Button text="Change"
                      press="onChangePwd"
                      ariaDescribedBy="defaultButtonDescription genericButtonDescription">
                <layoutData>
                  <l:GridData span="XL2 L3 M3 S4" />
                </layoutData>
              </Button>
				</f:content>
			</f:SimpleForm>
		</VBox>


		<footer>
			<Bar>
			</Bar>
		</footer>
	</Page>

</core:View>
<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="sap.it.pmt.ui.view.Login" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="loginPage" showFooter="false" showHeader="false">
		<f:SimpleForm id="loginForm" editable="true"
			layout="ResponsiveGridLayout" adjustLabelSpan="false">
			<f:content>
				<Label text="{i18n>empId}" />
				<Input value="{empId}" type="Text" editable="true">
					<layoutData>
						<l:GridData span="XL1 L3 M3 S4" />
					</layoutData>
				</Input>
				<Label text="" />
				<Button id="login" text="{i18n>login}" press="onPress"
					ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					<layoutData>
						<l:GridData span="XL1 L2 M2 S3" />
					</layoutData>
				</Button>
			</f:content>
		</f:SimpleForm>

	</Page>
</core:View>